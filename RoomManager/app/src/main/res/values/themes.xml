<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RoomManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Custom Dialog Style -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Set dialog background color to white -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Set the dialog text color to black -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>

        <!-- Set button text color explicitly for dialog buttons -->
        <item name="android:buttonStyle">@style/CustomDialogButtonStyle</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomDialogButtonStyle">
        <!-- Set the button text color to black -->
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.RoomManager" parent="Base.Theme.RoomManager" />
</resources>